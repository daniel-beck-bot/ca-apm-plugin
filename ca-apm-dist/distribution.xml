<assembly
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/package</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/properties</directory>
      <outputDirectory>properties</outputDirectory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/appassembler/repo</directory>
      <outputDirectory>repo</outputDirectory>
      <includes>
        <include>ca-apm*.jar</include>
      </includes>
    </fileSet>

  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/repo</outputDirectory>
      <unpack>false</unpack>
      <includes>
        <include>org.jenkins-ci.plugins.ca-apm:ca-apm-api:jar:</include>
        <include>org.jenkins-ci.plugins.ca-apm:ca-apm-core:jar:</include>
        <include>org.jenkins-ci.plugins.ca-apm:ca-apm-default-strategy:jar:</include>
        <include>org.jenkins-ci.plugins:ca-apm:hpi:</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>org.jenkins-ci.plugins:ca-apm-api</include>
        <include>org.jenkins-ci.plugins:ca-apm-core</include>
      </includes>
      <binaries>
        <includeDependencies>true</includeDependencies>
        <attachmentClassifier>javadoc</attachmentClassifier>
        <includes>
          <include>org.jenkins-ci.plugins:ca-apm-api:javadoc:</include>
          <include>org.jenkins-ci.plugins:ca-apm-core:javadoc:</include>
        </includes>
        <outputDirectory>/javadoc</outputDirectory>
        <unpack>true</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
